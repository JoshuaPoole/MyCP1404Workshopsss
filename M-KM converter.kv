BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: value_input
            text: '0'
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Button:
        id: convert_change
        text: 'Miles To Km'
        on_press: app.convert_change()

    Label:
        id: output_label
        font_size: 48
        text: '0.0'
        color: (1, 1, 0, 1)
